<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">Cell <%= @entity_type.name %></h4>
    </div>
    <%= form_with(model: [:admin, @cell], local: true, multipart:true) do |form| %>
    <div class="modal-body">
      <div class="row">

  <% if @cell.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cell.errors.count, "error") %> prohibited this cell from being saved:</h2>

      <ul>
      <% @cell.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="col-md-8">
      <div class="content-box">
        <div class="head head-border warning-color">
          <h5 class="content-title warning-color">Field and objects:</h5>
        </div>

        <div class="content">
          <%= render 'iteasykit/shared/fields/field_list', locals: [@entity_type, @object = @cell] %>

        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="content-box">
        <div class="head head-border warning-color">
          <h5 class="content-title warning-color">Settings:</h5>
        </div>

        <div class="content">
          <div class="form-group">
            <label class="control-label">Entity Type</label>
            <%= form.select(:iteasykit_entity_type_id, Iteasykit::EntityType.where(rel_model: 'Cell').map {|et| [et.name, et.id]},
                            {include_blank: false}, class: "form-control input-sm input-warning") %>
            <span class="help-block"><small>No edit</small></span>
          </div>
          <div class="form-group">
            <label class="control-label">Machine name</label>
            <%= form.text_field :machine_name, class: "form-control input-sm" %>
            <span class="help-block"><small>Machine name for theme</small></span>
          </div>
          <div class="form-group">
            <label class="control-label">Group</label>
            <%= form.text_field :group, class: "form-control input-sm" %>
            <span class="help-block"><small>Group cells. Available: <%= Iteasykit::Cell.all.map{|e| e.group}.uniq.join(', ') %></small></span>
          </div>
          <div class="form-group">
            <label class="control-label">Position</label>
            <%= form.text_field :position, class: "form-control input-sm" %>
            <span class="help-block"><small>Position cells</small></span>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label class="control-label text-color">
                  Active:
                  <%= form.check_box :active, class: "toggle toggle-success" %>
                  <i></i>
                </label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label class="control-label text-color">

                  Sticky:
                  <%= form.check_box :sticky, class: "toggle toggle-success" %>
                  <i></i>
                </label>
              </div>
            </div>
          </div>


        </div>
      </div>
      </div>

</div>
    </div>
      <%= hidden_field_tag 'object_relable', @objectrel.class.name %>
      <%= hidden_field_tag 'object_relable_id', @objectrel.id %>
    <div class="modal-footer">
      <%= form.submit 'Save changes', class: "btn-info btn-lg" %>
      <button type="button" class="btn btn-lg btn-default m-b-5" data-dismiss="modal">Close</button>
    </div>
    <% end %>
  </div>
</div>