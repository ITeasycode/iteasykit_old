<p id="notice"><%= notice %></p>

<h1>Партнери</h1>

<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Назва</th>
      <th>Сайт</th>
      <th>Телефон</th>
      <th>Адреса</th>
      <th>Координати</th>
      <th>Місто Україна</th>
      <th>Місто Молдова</th>
      <th>Активно</th>
      <th>Дії</th>
    </tr>
  </thead>

  <tbody>
    <% @partners.each do |partner| %>
      <tr>
        <td><%= partner.name %></td>
        <td><%= partner.site %></td>
        <td><%= partner.phone %></td>
        <td><%= partner.address %></td>
        <td><%= partner.coordinates %></td>
        <td><%= partner.city_ukr %></td>
        <td><%= partner.city_mold %></td>
        <td><%= partner.active %></td>
        <td> <%= link_to '<i class="zmdi zmdi-edit"></i>'.html_safe, edit_admin_partner_path(partner), class: "btn btn-success raised icon waves-effect" %>
          <%= link_to '<i class="zmdi zmdi-delete"></i>'.html_safe, [:admin, partner], class: "btn btn-danger raised icon waves-effect", method: :delete,
                      data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новий Партнер', new_admin_partner_path, class: "btn btn-success btn-lg", style: 'color: white!important;' %>
