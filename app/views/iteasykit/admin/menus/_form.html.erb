<%= form_with(model: [:admin, menu], local: true) do |form| %>
  <% if menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
        <% menu.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label">Name</label>
    <%= form.text_field :name, class: "form-control input-sm" %>
  </div>
  <div class="form-group">
    <label class="control-label">Description</label>
    <%= form.text_area :description, class: "form-control" %>
    <span class="help-block"><small>Administrative description.</small></span>
  </div>
  <div class="form-group">
    <label class="control-label">Machine name</label>
    <%= form.text_field :machine_name, class: "form-control input-sm" %>
    <span class="help-block"><small>Administrative name.</small></span>
  </div>
  <div class="form-group">
    <label class="control-label">Element html</label>
    <%= form.text_field :elementcls, class: "form-control input-sm" %>
    <span class="help-block"><small>span, p, etc. Default - div</small></span>
  </div>
  <div class="form-group">
    <label class="control-label">Id element</label>
    <%= form.text_field :idcls, class: "form-control input-sm" %>
    <span class="help-block"><small>Not default</small></span>
  </div>
  <div class="form-group">
    <label class="control-label">Class element</label>
    <%= form.text_field :csscls, class: "form-control input-sm" %>
    <span class="help-block"><small>Default - machine name</small></span>
  </div>
  <div class="form-group">
    <label class="control-label text-color">
      Active:
      <%= form.check_box :active, class: "toggle toggle-success" %>
      <i></i>
    </label>
  </div>


  <div class="actions">
    <%= form.submit 'Save', class: "btn-success btn-lg" %>
  </div>
<% end %>
