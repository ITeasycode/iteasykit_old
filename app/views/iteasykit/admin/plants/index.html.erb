<p id="notice"><%= notice %></p>

<h1>Iteasykit Plants</h1>

<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Site</th>
      <th>Phone</th>
      <th>Address map</th>
      <th>Geodanniye</th>
      <th>Country</th>
      <th>Email</th>
      <th>Cordinates</th>
      <th>Active</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @iteasykit_plants.each do |iteasykit_plant| %>
      <tr>
        <td><%= iteasykit_plant.site %></td>
        <td><%= iteasykit_plant.phone %></td>
        <td><%= iteasykit_plant.address_map %></td>
        <td><%= iteasykit_plant.geodanniye %></td>
        <td><%= iteasykit_plant.country %></td>
        <td><%= iteasykit_plant.email %></td>
        <td><%= iteasykit_plant.cordinates %></td>
        <td><%= iteasykit_plant.active %></td>
        <td>  <%= link_to '<i class="zmdi zmdi-edit"></i>'.html_safe, edit_admin_plant_path(iteasykit_plant), class: "btn btn-success raised icon waves-effect" %>
        <%= link_to '<i class="zmdi zmdi-delete"></i>'.html_safe, [:admin, iteasykit_plant], class: "btn btn-danger raised icon waves-effect", method: :delete,
                    data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plant', new_admin_plant_path, class: "btn btn-success btn-lg", style: 'color: white!important;'  %>
