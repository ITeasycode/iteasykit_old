<% content_for :entity_title do %>List entity types
<% end %>
<% content_for :pull_right do %>

<% end %>
<%= link_to 'New Entity Type', new_admin_entity_type_path, class: "btn btn-success waves-effect",
            style: 'color: white!important;' %> <br/><br/>
<table class="table table-bordered table-hover table-striped">
  <thead>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Machine name</th>
    <th>Model</th>
    <th>Description</th>
    <th>Help</th>
    <th>Active</th>
    <th>Nesting</th>
    <th>Relation</th>
    <th>Path root url</th>
    <th>Comment</th>
    <th>Position</th>
    <th>Action</th>
  </tr>
  </thead>

  <tbody>
  <% @entity_types.each do |entity_type| %>
    <tr>
      <td><%= entity_type.id %></td>
      <td><%= entity_type.name %></td>
      <td><%= entity_type.machine_name %></td>
      <td><%= entity_type.rel_model %></td>
      <td><%= entity_type.description %></td>
      <td><%= entity_type.help %></td>
      <td><i class="zmdi zmdi-<%= entity_type.active ? 'check' : 'close' %>"></i></td>
      <td><i class="zmdi zmdi-<%= entity_type.nesting ? 'check' : 'close' %>"></i></td>
      <td><i class="zmdi zmdi-<%= entity_type.relation ? 'check' : 'close' %>"></i></td>
      <td><i class="zmdi zmdi-<%= entity_type.path_root_url ? 'check' : 'close' %>"></i></td>
      <td><i class="zmdi zmdi-<%= entity_type.comment ? 'check' : 'close' %>"></i></td>
      <td><i class="zmdi zmdi-<%= entity_type.position ? 'check' : 'close' %>"></i></td>
      <td class="text-center">
        <%= link_to '<i class="zmdi zmdi-playlist-plus"></i>'.html_safe, admin_entity_type_path(entity_type), class: "btn btn-info raised icon waves-effect" %>
        <%= link_to '<i class="zmdi zmdi-edit"></i>'.html_safe, edit_admin_entity_type_path(entity_type), class: "btn btn-success raised icon waves-effect" %>
        <%= link_to '<i class="zmdi zmdi-delete"></i>'.html_safe, [:admin, entity_type], class: "btn btn-danger raised icon waves-effect", method: :delete,
                    data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

